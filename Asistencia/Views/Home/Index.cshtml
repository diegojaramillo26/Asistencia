                      new SelectListItem { Value = "Directivos" , Text = "Directivos" },
                      new SelectListItem { Value = "Elementary school" , Text = "Elementary school" },
                      new SelectListItem { Value = "High school" , Text = "High school" },
                      new SelectListItem { Value = "Mantenimiento" , Text = "Mantenimiento" },
                      new SelectListItem { Value = "Middle school" , Text = "Middle school" },
                      new SelectListItem { Value = "Preschool" , Text = "Preschool" },
                   }, new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.strCargo, "", new { @class = "text-danger" })

