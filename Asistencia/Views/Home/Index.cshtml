        <h2>Index</h2>
        @*<form>*@
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="form-group">
            @Html.Label("Nombre")

            @Html.EditorFor(model => model.strNombre, new { htmlAttributes = new { @class = "form-control" } })
